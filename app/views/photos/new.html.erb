<% @photo.errors.full_messages.each do |error| %>
  <div class="alert alert-error">
    <%= error %>
  </div>
<% end %>

<div class="well">
  <%= form_for @photo, html: {multipart: true} do |f| %>
    <%= f.label :attachment %>
    <%= f.file_field :attachment %>
    <br />
    <%= f.label :description %>
    <%= f.text_field :description %>
    <br />
    <%= f.submit "Upload Photo", class: "btn btn-primary" %>
  <% end %>
</div>